{
    "files.autoGuessEncoding": false,
    "files.encoding": "utf8",
    "fileHeaderComment.parameter": {
        "*": {
            "commentbeg": "# ",
            "commentpre": "# ",
            "commentend": "#  ",
            "bar": "=========================================================================================",
            "barComment": "# ---------------------------------------------------------------------------------------",
        }
    },
    "fileHeaderComment.template": {
        "*": [
            "${commentbeg}${bar}",
            "${commentbeg} Presentation",
            "${commentbeg} Copyright (C) 2018, Cyfex AG",
            "${commentbeg}",
            "${commentbeg} @date ${date}",
            "${commentbeg} @author ${authorName}, ${authorEmail}",
            "${commentbeg}",
            "${commentbeg}${bar}"
        ]
    },
}
